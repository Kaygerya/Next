@model MyNextMatch.Entities.Classes.Address
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UserAddress</title>
</head>
<body>
    <form action="@Url.Action("UserAddress","Default", new { userId= Model.Owner })" method="post">
        PostCode : @Html.TextBoxFor(model => model.PostCode)
        <br />
        AddressLine:  @Html.TextBoxFor(model => model.AddressLine)
        <br />
        Owner:   @Html.TextBoxFor(model => model.Owner)
        <br />
        OwnerType:   @Html.TextBoxFor(model => model.OwnerType)
        <br />
        <button type="submit">Gonder</button>
        <br />
        <br /><br />

        @foreach (var error in Model.Errors)
        {
            <span style="color:red;">@error</span>
        }
        <br />
        <span style="color:green;">@Model.SuccessMessage</span>

    </form>

</body>
</html>
